/* components/TeamShow/TeamShow.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
Page {
  height: 100%;
}
image{
  max-height: 300rpx;
}
.index_container {
  padding: 5rpx  0 10rpx;
  height: 100%;
  /* background-color: var(--themeColor); */
  background-color: rgb(241, 241, 241);
  /* background-color: #ffba93; */
}
.index_container .index_list {
  height: 100%;
  /* background-color: var(--themeColor); */
  background-color: rgb(241, 241, 241);
}
.index_container .index_list .single_team {
  border-radius: 20rpx;
  padding: 10rpx;
  margin: 10rpx;
  height: 500rpx;
  background-color: rgb(255, 255, 255);
}

.index_container .index_list .single_team .single_upper {
  display: flex;
  position: relative;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}
.index_container .index_list .single_team .single_upper .teamname {
  flex: 4;
  display: flex;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* height: 100%; */
  /* font-weight: bold; */
  align-items: center;
  /* justify-content: center; */
  font-size: 36rpx;
  margin-left: 10rpx;
  /* color: #d89cf6; */
}
.index_container .index_list .single_team .single_upper .isleader {
  flex: 1;
  height: 100%;
}
.index_container .index_list .single_team .single_upper .deadline {
  /* background-color: blanchedalmond; */
  display: flex;
  position: relative;
  flex: 2;
  height: 100%;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-right: 10rpx;
}
.index_container .index_list .single_team .line {
  border: 0.5rpx solid #d89cf6;
  color: #d291bc;
  /* height: 1rpx; */
  /* background-color: gray; */
}
.index_container .index_list .single_team .single_down {
  padding: 10rpx 0;
  width: 100%;
  display: flex;
  height: 100rpx;
}
.index_container .index_list .single_team .single_down .info {
  flex: 5;
  height: 100%;
  margin-left: 10rpx;
  /* background-color: bisque; */
  font-size: 30rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-line;
}
.index_container .index_list .single_team .single_down .peoplenumber {
  display: flex;
  position: relative;
  margin-right: 10rpx;
  /* background-color: #f9d9ff; */
  flex: 2;
  height: 100%;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}

.bubble{ 
  position: relative;
  overflow: hidden;
 }
 .bubble:after{
  content: "";
  background: rgb(179, 171, 255);
  position: absolute; 
  width: 750rpx;
  height: 750rpx;
  left: calc(50% - 375rpx);
  top: calc(50% - 375rpx);
  opacity: 0;
  margin: auto;
  border-radius: 50%;
  transform: scale(1);
  transition: all 0.4s ease-in-out;
 }
 .bubble:active:after {
  transform: scale(0);
  opacity: 1;
  transition: 0s;
 }

.noresult{
  display: flex;
  height: 800rpx;
  font-size: 35rpx;
  justify-content: center;
  align-items: center;

}
