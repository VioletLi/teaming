<!--components/TeamShow/TeamShow.wxml-->


<!-- 监听自定义事件 -->
<Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange" ></Tabs>
<view wx:if="{{searched}}" >
    <view class="index_container" >

        <!-- 加载过程 loading -->
        <view>
            <loading hidden="{{!loading}}">
                加载中...
            </loading>
        </view>

        <!-- 搜索完成 -->
        <view wx:if="{{searchover}}">
            <!-- 根据tab再设置teamtabinfo -->

            <!-- 有结果 -->
            <view wx:if="{{teamtabinfo.length}}">
                <!-- 显示队伍列表 -->
                <scroll-view scroll-y class="index_list">
                    <!-- 单个队伍框-->
                    <navigator class="single_team"
                    wx:for="{{teamtabinfo}}"
                    url="/pages/teamtabinfo/teamtabinfo?team_id={{item._id}}">
                        <!-- 上：队伍名   截止时间 -->
                        <view class="single_upper">
                            <view class="teamname">{{item.team_name}}</view>
                            <view class="isleader"></view>
                            <view class="deadline">{{item.deadline}}</view>
                        </view>
                        <!-- 一条虚线 -->
                        <view class="line"></view>
                        <!-- 下：信息  当前人数/人数上限 -->
                        <view class="single_down">
                            <rich-text class="info" >{{item.information}}</rich-text>
                            <view class="peoplenumber">{{item.current_member}}/{{item.max}}</view>
                        </view>
                    </navigator>
                </scroll-view>
            </view>
            <!-- 没结果 -->
            <view hidden="{{homepage}}" class="noresult" wx:else>没有搜索到相关内容呢，这边建议换个关键词</view>
        </view>
    </view>
</view>
