<!--components/tabs/Tabs.wxml-->
<scroll-view scroll-x class="tabs">
  <view class="tabs_single">
    <view 
    wx:for="{{tabs}}"
    wx:key="id" 
    class="single_item {{item.isActive?'active':''}}"
    bindtap="handleItemTap"
    data-index="{{index}}">
    {{item.value}}
    </view>
  </view>
</scroll-view>