.content .first_tab .info_content {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-line;
}
.content .sec_tab {
  height: 100%;
}
.content .sec_tab .single_member {
  border-bottom: darkgray 1rpx;
}
