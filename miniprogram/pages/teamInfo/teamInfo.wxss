.header {
  display: flex;
  height: 120rpx;
  width: 100%;
  background-color: antiquewhite;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}
.content {
  height: 100%;
  margin: 10rpx;
  background-color: blanchedalmond;
  border-radius: 5rpx;
}
.content .first_tab .tags {
  padding: 10rpx;
  display: flex;
  height: 70rpx;
  background-color: cornsilk;
  border: 1px dashed #F00;
  align-items: center;
  font-size: 45rpx;
  margin: 20rpx;
}
.content .first_tab .status {
  padding: 10rpx;
  display: flex;
  background-color: cornsilk;
  border: 1px dashed #F00;
  align-items: center;
  border: 2px solid #ffffff;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 4px 1px 1px #cccccc;
  margin: 20rpx;
}
